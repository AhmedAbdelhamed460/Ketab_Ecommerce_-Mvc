@model IEnumerable<Product>

<div class="row p-3">
	@foreach (var Product in Model)
	{
		<div class="col-lg-3 col-sm-3">

			<div class=" row p-3">
				<div class="col-12 p-1">
					<div class="card border-0 p-3 shadow border-top border-5 rounded">
						<img src="@Product.ImageUrl" class="card-img-top-rounded"/>
						<div class="card-body pb-0">

							<div class="p1-1">
								<p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@Product.Title</p>
								<p class="card-title  text-warning   text-center">By <b>@Product.Author </b></p>

								</div>
							<div class="p1-1">
								<p class=" text-dark text-opacity-75 text-uppercase text-center mb-0">List Price :<span class="text-decoration-line-through "> @Product.Price100.ToString("c")</span></p>
							</div>
						</div>
						<div class="p1-1">
							<p class=" text-dark text-opacity-75 text-uppercase text-center">As Low as <span>@Product.Price50.ToString("c")</span></p>
						</div>

					</div>
					<div >
						<a class=" btn btn-primary bg-gradient border-0 form-control" asp-action="Details" asp-route-id="@Product.Id">
							Details
						</a>
					
						
					</div>
					</div>
				</div>
			</div>
		

	}


</div>