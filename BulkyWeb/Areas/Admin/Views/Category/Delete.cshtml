@model Category
<form method="post">
	<input asp-for="CategoryId" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">
				Create Category
			</h2>
		</div>
	</div>

	<div class="mb-3 row p-1">
		<label class="p-0" asp-for="Name"></label>
		<input type="text" class="form-control" asp-for="Name" disabled />
		

	</div>
	<div class="mb-3 row p-1">
		<label class="p-0" asp-for="DesplayOrder"></label>
		<input type="text" class="form-control" asp-for="DesplayOrder" disabled />
		
	</div>

	<div class="row">
		<div class="col-6 col-md-3">
			<button class="btn btn-danger form-control" type="submit">Delete</button>
		</div>
		<div class="col-6 col-md-3">
			<a class="btn btn-outline-secondary" asp-action="index" asp-controller="Category"> Back To List</a>
		</div>

	</div>
</form>

